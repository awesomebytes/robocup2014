#JSGF V1.0;

/**
 * Robot grammar;
 */

grammar robot;

public <command> = <greet> | <garbage>;



<greet> =
  hello |
  hi  |
  how are you  |
  good day  |
  good morning  |
  good night  |
  good evening;

<garbage>  = <garbage2>;
<garbage1> = _unk;
<garbage2> = <garbage1> | (_unk _unk);
<garbage3> = <garbage2> | (_unk _unk _unk);
<garbage4> = <garbage3> | (_unk _unk _unk _unk);
<garbage5> = <garbage4> | (_unk _unk _unk _unk _unk);
<garbagen> = _unk*;



